{
  "name": "letrino-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:db": "ts-node src/test-db.ts",
    "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier . --write",
    "seed": "ts-node src/seeders/word.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "cross-env NODE_ENV=development typeorm-ts-node-commonjs -d ./src/config/db/data-source.ts migration:generate ./src/config/db/migrations/default",
    "migration:development:run": "cross-env NODE_ENV=development typeorm-ts-node-commonjs -d ./src/config/db/data-source.ts migration:run",
    "migration:revert": "cross-env NODE_ENV=development typeorm-ts-node-commonjs -d ./src/config/db/data-source.ts migration:revert",
    "migration:production:run": "cross-env NODE_ENV=production node -r dotenv/config ./node_modules/typeorm/cli.js -d ./dist/config/db/data-source.js migration:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@sentry/node": "^10.1.0",
    "@sentry/profiling-node": "^10.1.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "cron": "^4.3.0",
    "cross-env": "^10.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "google-auth-library": "^10.5.0",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.25",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/cors": "^2.8.18",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.10",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "globals": "^15.15.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.31.0"
  }
}
